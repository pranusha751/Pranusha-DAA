# Index Matrix without using functions and in a simple way

# Define the matrix
matrix = [
    [1, 2, 3],
    [4, 5, 6],
    [7, 8, 9]
]

# Print the index and value of each element in the matrix
for i in range(len(matrix)):
    for j in range(len(matrix[i])):
        print(f"Element at index ({i}, {j}): {matrix[i][j]}")
